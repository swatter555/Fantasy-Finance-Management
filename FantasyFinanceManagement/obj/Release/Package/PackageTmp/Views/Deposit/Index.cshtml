@model FantasyFinanceManagement.Models.DepositSubmitModel

<div id="info_div">
    Please enter an amount to deposit in your account
</div>

@using (Html.BeginForm())
{
    <div id="valid_summary">
        @Html.ValidationSummary()
    </div>

    <fieldset>
        <div class="form-group">
            @Html.TextBoxFor(model => model.DepositAmt, new { @class = "form-control", placeholder = "Deposit Amount" })
            <button type="submit" class="btn btn-default">Deposit</button>
        </div>
    </fieldset>
}