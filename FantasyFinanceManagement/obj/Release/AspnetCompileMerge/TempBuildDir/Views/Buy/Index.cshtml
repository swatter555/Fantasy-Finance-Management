@model FantasyFinanceManagement.Models.BuySubmitModel

<div id="info_div">
    Please enter the stock symbol and number of shares you wish to purchase
</div>

@using (Html.BeginForm())
{
    <div id="valid_summary">
        @Html.ValidationSummary()
    </div>

    <fieldset>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Symbol, new { @class = "form-control", placeholder = "Symbol" })
            @Html.TextBoxFor(model => model.Shares, new { @class = "form-control", placeholder = "Shares to Purchase" })
            <button type="submit" class="btn btn-default">Buy</button>
        </div>
    </fieldset>
}